{% macro confirm_modal(id, deleteLink, body) %}
  
        <div id="resetPasswordModal-{{ id }}" class="modal fade" role="dialog">
            <div class="modal-dialog" >
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Are you sure?</h4>
                    </div>
                    <div class="modal-body">
                        <p>{{ body }}</p>
                    </div>
                    <div class="modal-footer">
                        <a href="{{ deleteLink }}" class="btn btn-action">Yes</a>
                       <button id="cancel-button" data-bs-dismiss="modal" class="btn btn-secondary cancel-button">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    
{% endmacro %}